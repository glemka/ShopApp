{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": [
      {
        "RouteId": "products-route",
        "ClusterId": "products-cluster",
        "Match": {
          "Path": "{**catch-all}"
        },
        "Transforms": [
          { "ClientCert": "X-Client-Cert" }
        ]      
      }
    ],
    "Clusters": {
      "products-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:5001"
          }
        }
      }
    }
  }
}
